<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RaceActivity">

    <TextView
        android:id="@+id/RaceListHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Race_list"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RaceListHeading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/DragonbornButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Dragonborn_str"
                android:onClick="moveDragonbornPage"/>

            <Button
                android:id="@+id/DwarfButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Dwarf_str"
                android:onClick="moveDwarfPage"/>

            <Button
                android:id="@+id/ElfButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Elf_str"
                android:onClick="moveElfPage"/>

            <Button
                android:id="@+id/GnomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Gnome_str" />

            <Button
                android:id="@+id/HalflingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Halfling_str" />

            <Button
                android:id="@+id/HalfElfButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HalfElf_str" />

            <Button
                android:id="@+id/HalfOrcButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HalfOrc_str" />

            <Button
                android:id="@+id/HumanButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Human_str" />

            <Button
                android:id="@+id/TieflingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Tiefling_str" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>