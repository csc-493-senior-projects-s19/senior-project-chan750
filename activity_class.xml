<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassActivity">

    <TextView
        android:id="@+id/ClassListHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Class_list"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="530dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClassListHeading"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/BarbarianButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:text="@string/Barbarian_str"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <Button
                android:id="@+id/BardButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/Bard_str" />

            <Button
                android:id="@+id/ClericButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/Cleric_str" />

            <Button
                android:id="@+id/DruidButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/Druid_str" />

            <Button
                android:id="@+id/FighterButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/Fighter_str" />

            <Button
                android:id="@+id/MonkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Monk_str" />

            <Button
                android:id="@+id/PaladinButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Paladin_str" />

            <Button
                android:id="@+id/RangerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Ranger_str" />

            <Button
                android:id="@+id/RogueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Rogue_str" />

            <Button
                android:id="@+id/SorcererButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Sorcerer_str" />

            <Button
                android:id="@+id/WizardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Wizard_str" />

            <Button
                android:id="@+id/WarlockButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Warlock_str" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>